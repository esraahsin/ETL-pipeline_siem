# =============================================================================
# SIEM ETL Pipeline â€” Environment Variables Example
# Copy this file to .env and fill in your values
# =============================================================================

# --- Kafka ---
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_FIREWALL=firewall-logs
KAFKA_TOPIC_WEBSERVER=web-logs
KAFKA_TOPIC_WINDOWS=windows-logs
KAFKA_TOPIC_IDS=ids-logs
KAFKA_NUM_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1

# --- Elasticsearch ---
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=siem
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# --- Kibana ---
KIBANA_HOST=localhost
KIBANA_PORT=5601

# --- MinIO (S3-compatible Data Lake) ---
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_RAW=siem-raw-logs
MINIO_BUCKET_PROCESSED=siem-processed-logs

# --- Apache Airflow ---
AIRFLOW_HOST=localhost
AIRFLOW_PORT=8080
AIRFLOW_USERNAME=airflow
AIRFLOW_PASSWORD=airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@localhost/airflow

# --- Grafana ---
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# --- MaxMind GeoIP2 ---
MAXMIND_DB_PATH=/opt/geoip/GeoLite2-City.mmdb
MAXMIND_LICENSE_KEY=your_maxmind_license_key_here

# --- AbuseIPDB (optional threat intelligence) ---
ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here

# --- Spark ---
SPARK_MASTER=local[*]
SPARK_APP_NAME=SIEM-ETL-Pipeline

# --- Log generators ---
GENERATOR_INTERVAL_SECONDS=1
GENERATOR_BATCH_SIZE=10
