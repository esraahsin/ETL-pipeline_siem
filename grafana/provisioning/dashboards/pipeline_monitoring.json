{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus metrics datasource",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "title": "SIEM Pipeline Monitoring",
  "uid": "siem-pipeline-monitoring",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "tags": ["siem", "monitoring"],
  "panels": [
    {
      "id": 1,
      "title": "Kafka Throughput (messages/sec)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "rate(kafka_server_brokertopicmetrics_messagesinpersec_total[1m])",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "color": { "mode": "palette-classic" } }
      }
    },
    {
      "id": 2,
      "title": "Spark Processing Latency (ms)",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "spark_streaming_processingTime_mean",
          "legendFormat": "Processing time",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ms", "color": { "mode": "fixed", "fixedColor": "orange" } }
      }
    },
    {
      "id": 3,
      "title": "Parsing Success Rate (%)",
      "type": "gauge",
      "gridPos": { "x": 0, "y": 8, "w": 8, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "100 * siem_parsed_events_total / (siem_parsed_events_total + siem_parse_errors_total)",
          "legendFormat": "Success rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 90 },
              { "color": "green", "value": 98 }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Pipeline Error Rate (errors/min)",
      "type": "timeseries",
      "gridPos": { "x": 8, "y": 8, "w": 8, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "rate(siem_parse_errors_total[1m])",
          "legendFormat": "Errors/min",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "color": { "mode": "fixed", "fixedColor": "red" } }
      }
    },
    {
      "id": 5,
      "title": "Events by Source Type (last 1h)",
      "type": "piechart",
      "gridPos": { "x": 16, "y": 8, "w": 8, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum by (source_type) (increase(siem_parsed_events_total[1h]))",
          "legendFormat": "{{source_type}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "Elasticsearch Indexing Rate (docs/sec)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "rate(elasticsearch_indices_indexing_index_total[1m])",
          "legendFormat": "Docs indexed/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      }
    },
    {
      "id": 7,
      "title": "Kafka Consumer Lag",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "kafka_consumergroup_lag",
          "legendFormat": "{{topic}} - {{partition}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short" }
      }
    }
  ],
  "time": { "from": "now-3h", "to": "now" }
}
